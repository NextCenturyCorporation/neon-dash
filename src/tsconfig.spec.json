{
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "../out-tsc/spec",
    "module": "esnext",
    "target": "es2015",
    "baseUrl": "",
    "types": [
      "jasmine",
      "node",
      "node-uuid"
    ],
    "typeRoots": [
        "../node_modules/@types",
        "./vendor-types"
    ]
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "testUtils/*",
    "**/*.spec.ts"
  ]
}
