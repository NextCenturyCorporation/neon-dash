{
    "dashboard": {
        "gridsterColumns": 24,
        "gridsterMargins": 10,
        "hideNavbarItems": false,
        "hideAdvancedOptions": false,
        "hideFilterStatusTray": false,
        "hideErrorNotifications": false,
        "hideHeaders": false,
        "hideCloseButton": false,
        "showVideoOnLoad": false,
        "showImport": false,
        "showExport": true
    },

    "help": {
        "guide": "./app/help/Neon-Dashboard-User-Guide.pdf",
        "webVideo": "",
        "localVideo": ""
    },

    "externalServices": {
        "jsonConfigFile": "",
        "appImagePath": "",
        "fileProps": {
            "url": "url",
            "name": "name",
            "image": "image",
            "services": "services"
        },
        "servicesMappings": {
            "neonMapping1": "serviceName1",
            "neonMapping2": "serviceName2"
        },
        "argsMappings": {
            "neonMapping1": {
                "serviceName1": "neonMapping1"
            },
            "neonMapping2": {
                "serviceName2": {
                    "propertyName1": "neonMapping3",
                    "propertyName2": "neonMapping4"
                }
            }
        }
    },

    "datasets": [{
        "name": "Earthquakes",
        "datastore": "elasticsearch",
        "hostname": "localhost",
        "connectOnLoad": true,
        "databases": [{
            "name": "earthquakes",
            "prettyName": "Earthquake Data",
            "tables": [{
                "name": "quakedata",
                "prettyName": "Earthquakes",
                "fields": [ {
                    "columnName": "id",
                    "prettyName": "ID"
                },{
                    "columnName": "time",
                    "prettyName": "Time"
                }, {
                    "columnName": "latitude",
                    "prettyName": "Latitude"
                }, {
                    "columnName": "longitude",
                    "prettyName": "Longitude"
                }, {
                    "columnName": "depth",
                    "prettyName": "Depth"
                }, {
                    "columnName": "mag",
                    "prettyName": "Magnitude"
                }, {
                    "columnName": "magType",
                    "prettyName": "Magnitude Type"
                },{
                    "columnName": "net",
                    "prettyName": "Net"
                }, {
                    "columnName": "type",
                    "prettyName": "Type"
                }],
                "mappings": {
                    "date": "time",
                    "latitude": "latitude",
                    "longitude": "longitude",
                    "id": "id"
                }
            }]
        }],
        "mapConfig": {
            "myMap1": {
                "bounds": {
                    "left": -180,
                    "bottom": -90,
                    "right": 180,
                    "top": 90
                }
            }
        },
        "linkyConfig": {
            "mentions": false,
            "hashtags": false,
            "urls": true,
            "linkTo": "twitter"
        },
        "options": {
            "colorMaps": {
                "test": {
                    "earthquakes": {
                        "myField": {
                            "fieldA": "",
                            "fieldB": ""
                        }
                    }
                }
            },
            "mapBaseLayer": {
                "color": "dark",
                "protocol": "https"
            }
        }
    }],

    "layouts": {
        "default": [
          {
                "sizex": 20,
                "sizey": 3,
                "row": 0,
                "col": 0,
                "type": "filterBuilder",
                "bindings": {
                    "database": "earthquakes",
                    "table": "quakeData",
                    "title": "Earthquake Filter Builder"
                }
            },
            {
                "sizex": 10,
                "sizey": 5,
                "row": 4,
				"col": 0,
                "type": "timeline",
                "bindings": {
                    "database": "earthquakes",
                    "table": "quakeData",
                    "dateField": "time",
                    "title": "Earthquake Activity"
                }
            },
            {
                "sizex": 10,
                "sizey": 5,
                "row": 4,
                "col": 11,
                "type": "scatterPlot",
                "bindings": {
                    "title" : "Mangitude vs Depth",
                    "database": "earthquakes",
                    "table": "quakeData",
                    "xField": "depth",
                    "yField": "mag"
                }
            },
            {
                "sizex": 20,
                "sizey": 6,
                "type": "map",
                "row":10,
                "col": 0,
                "bindings": {
                	"title":"Earthquake Locations ",
                    "database": "earthquakes",
                    "table": "quakeData",
                    "latitudeField": "latitude",
                    "longitudeField": "longitude",
                    "dateField": "time",
                    "colorField": "type",
                    "limit": 5000

                }
            },
            {
                "sizex":6,
                "sizey": 6,
                "row": 16,
                "col":0,
                "type": "barChart",
                "bindings": {
                    "database": "earthquakes",
                    "table": "quakeData",
                    "dataField": "type",
                    "aggregation": "count",
                    "title":"Earthquake Type"
                }
            },
            {
                "sizex": 6,
                "sizey": 6,
                "row": 16,
                "col":7,
                "type": "lineChart",
                "bindings": {
                    "database": "earthquakes",
                    "table": "quakeData",
                    "dateField": "time",
                    "groupField": "type",
                    "aggregation": "count",
                    "title":"Earthquake Type over Time"
                }
            },    {
                "sizex": 4,
                "sizey": 6,
                "row":16,
                "col":13,
                "type": "textCloud",
                "bindings": {
                    "title":"Magnitude Type",
                    "database": "earthquakes",
                    "table": "quakeData",
                    "dataField": "magType"
                }
            },
            {
                "sizex": 24,
                "sizey": 6,
                "type": "dataTable",
                "bindings": {
                "title":"Earthquake Data",
                    "database": "earthquakes",
                    "table": "quakeData",
                    "sortField": "time",
                   "allColumnStatus": "hide",
					"exceptionsToStatus": [
						"id",
						"time",
						"latitude",
						"longitude",
						"mag",
						"depth"
					]
                }
            }
        
          
        ]
    },

    "customFilters": {
        "earthquakes": {
            "quakeData": [{
                "label": "Types",
                "items": [{
                    "label": "Earthquake",
                    "field": "type",
                    "value": "earthquake"
                }, {
                    "label": "Explosion",
                    "field": "type",
                    "value": "explosion"
                }, {
                    "label": "Landslide",
                    "field": "type",
                    "value": "landslide"
                }, {
                    "label": "Mining Explosion",
                    "field": "type",
                    "value": "mining_explosion"
                }, {
                    "label": "Quarry",
                    "field": "type",
                    "value": "quarry"
                }, {
                    "label": "Quarry Blast",
                    "field": "type",
                    "value": "quarry_blast"
                }, {
                    "label": "Sonicboom",
                    "field": "type",
                    "value": "sonicboom"
                }]
            }, {
                "label": "Networks",
                "input": {
                    "field": "net"
                }
            }],
            "myTable": [{
                "label": "My Group",
                "items": [{
                    "label": "Equals My Value",
                    "field": "myField",
                    "value": "myValue"
                }, {
                    "label": "Contains My Value",
                    "field": "myField",
                    "operator": "contains",
                    "value": "myValue"
                }, {
                    "label": "Not Null",
                    "field": "myField"
                }],
                "input": {
                    "field": "myField",
                    "operator": "contains"
                }
            }, {
                "label": "My Group 2",
                "multi": {
                    "myField": [{
                        "value": "A"
                    }, {
                        "operator": "contains",
                        "value": "B"
                    }, {
                        "value": ["C", "D"]
                    }]
                }
            }]
        }
    },

    "files": {
        "datasets": [
            "./app/config/sample.dataset.config.json"
        ],
        "layouts": [
            "./app/config/sample.layout.config.json"
        ]
    }
}
